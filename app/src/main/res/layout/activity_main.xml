<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ImageView
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:src="@drawable/bg"
       android:scaleType="centerCrop"
    />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:text="ASHISH CHHABRA"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/desg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Android Developer"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="#F10404"
        />

    <TextView
        android:id="@+id/edu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDUCATION"
        android:layout_below="@id/desg"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/colname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edu"
        android:text="@string/College"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="#F10404"
        />

        <TextView
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            android:layout_below="@id/colname"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="#F10404"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/sessionyears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-2021"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="#F10404"
            android:layout_below="@id/colname"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COURSES"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:layout_below="@id/branch"
            />
        <TextView
            android:id="@+id/org"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What After College"
            android:layout_below="@id/course"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="#F10404"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/coursename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Developement"
            android:layout_below="@id/org"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="#F10404"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="#F10404"
        android:layout_below="@id/org"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />
    <Button
        android:id="@+id/opengithub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/coursename"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="OPEN GITHUB"
        android:background="#BEA8E6"
        android:textSize="20dp"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/openlinkedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/year"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:text="OPEN Linkedin"
        android:background="#4B9DDD"
        android:textSize="20dp"
        android:padding="15dp"
        />

</RelativeLayout>